@model List<ApplicationUser>

@{
    ViewData["Title"] = "Адмін Панель";
}

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
            <div class="position-sticky">
                <ul class="nav flex-column p-3">
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold" asp-controller="Admin" asp-action="Index">👤 Користувачі</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Order" asp-action="Index">📋 Замовлення</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Products" asp-action="Index">🎮 Товари</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Genres" asp-action="Index">📚 Жанри</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Collection" asp-action="Index">🗂️ Колекції</a>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <h2 class="my-4">Користувачі</h2>

            <div class="row">
                @foreach (var user in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@user.Email</h5>
                                <p class="card-text">
                                    <strong>Ролі:</strong>
                                    @if (ViewBag.UserRoles.ContainsKey(user.Id))
                                    {
                                        foreach (var role in ViewBag.UserRoles[user.Id])
                                        {
                                            <span class="badge bg-info text-dark me-1">@role</span>
                                        }
                                    }
                                </p>
                                <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-outline-dark btn-lg w-100 fav-item">Редагувати ролі</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </main>
    </div>
</div>