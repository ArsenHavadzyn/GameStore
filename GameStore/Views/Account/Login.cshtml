@model LoginViewModel

@{
    ViewData["Title"] = "Вхід";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Login" method="post" class="p-4 shadow rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Електронна пошта:</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Пароль:</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe">Запам'ятати мене?</label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-outline-dark btn-lg fav-item">Увійти</button>
                </div>

                <div class="mt-3 text-center">
                    <a class="text-decoration-none link-dark" href="/Account/ForgotPassword">Забули пароль?</a>
                </div>
            </form>

            <div class="my-5 text-center">
                <a asp-action="Register" class="text-decoration-none link-dark">Не зареєстровані? Створіть особисту сторінку уже зараз!</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
