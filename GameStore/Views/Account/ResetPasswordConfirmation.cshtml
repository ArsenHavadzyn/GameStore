@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Пароль змінено";
    ViewData["Message"] = "Ваш пароль було успішно змінено. Тепер ви можете увійти";
}

<form asp-action="Login" method="post" class="p-4 shadow rounded bg-light my-3">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-outline-dark btn-lg fav-item">Увійти</button>
    </div>

</form>