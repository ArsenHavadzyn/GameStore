@model ApplicationUser

@{
    ViewData["Title"] = "Редагування профілю";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditProfile" method="post" enctype="multipart/form-data" class="p-4 shadow rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">Повне ім'я:</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email:</label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold">Телефон:</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold">Адреса:</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BirthDate" class="form-label fw-bold">Дата народження:</label>
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Нове фото профілю:</label>
                    <input asp-for="ProfilePictureUrl" class="form-control" type="file" />
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" class="img-thumbnail mt-2" style="width: 150px;">
                    }
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-outline-dark btn-lg fav-item">Зберегти зміни</button>
                </div>
            </form>
        </div>
    </div>
</div>
