@model ApplicationUser

@{
    ViewData["Title"] = "Особистий кабінет";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0">Особистий кабінет</h3>
                </div>
                <div class="card-body text-center p-4">
                    <img src="@(!string.IsNullOrEmpty(Model.ProfilePictureUrl) ? Model.ProfilePictureUrl : "/uploads/default-avatar.png")"
                         class="rounded-3 mb-3 img-fluid"
                         style="width:200px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);"
                         alt="Аватар">

                    <h4 class="fw-bold">@Model.FullName</h4>
                    <p class="text-muted">@Model.Email</p>

                    <p><strong>Дата реєстрації:</strong> @Model.RegistrationDate.ToString("dd.MM.yyyy")</p>

                    <div class="d-grid gap-2">
                        <form asp-controller="Account" asp-action="EditProfile" method="post">
                            <button type="submit" class="btn btn-outline-dark btn-lg">Редагувати профіль</button>
                        </form>

                        <form asp-controller="Account" asp-action="ResetPassword" method="post">
                            <button type="submit" class="btn btn-outline-dark btn-lg">Змінити пароль</button>
                        </form>

                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-outline-dark btn-lg">Вийти</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>