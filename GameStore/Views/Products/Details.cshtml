@model GameStore.Models.Product

@{
    ViewData["Title"] = "Детальна інформація";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-light">
                    <h4 class="mb-0">@Model.Title</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded">
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Опис</dt>
                                <dd class="col-sm-8">@Model.Description</dd>

                                <dt class="col-sm-4 text-muted">Ціна</dt>
                                <dd class="col-sm-8">$@Model.Price</dd>

                                <dt class="col-sm-4 text-muted">Дата виходу</dt>
                                <dd class="col-sm-8">@Model.ReleaseDate.ToShortDateString()</dd>

                                <dt class="col-sm-4 text-muted">Розробник</dt>
                                <dd class="col-sm-8">@Model.Developer</dd>

                                <dt class="col-sm-4 text-muted">Видавець</dt>
                                <dd class="col-sm-8">@Model.Publisher</dd>

                                <dt class="col-sm-4 text-muted">Платформи</dt>
                                <dd class="col-sm-8">@string.Join(", ", Model.Platforms)</dd>

                                <dt class="col-sm-4 text-muted">Жанр</dt>
                                <dd class="col-sm-8">@Model.Genre.Name</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark me-2">Редагувати</a>
                    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
                </div>
            </div>
        </div>
    </div>
</div>
